global
  log /dev/log local0
  log /dev/log local1 notice
  chroot /var/lib/haproxy
  stats socket /run/haproxy/admin.sock mode 660 level admin
  stats timeout 30s
  user haproxy
  group haproxy
  daemon
  maxconn <%= @global_maxconn %>

  # Default SSL material locations
  ca-base /etc/ssl/certs
  crt-base /etc/ssl/private

  # Default ciphers to use on SSL-enabled listening sockets.
  # For more information, see ciphers(1SSL). This list is from:
  #  https://hynek.me/articles/hardening-your-web-servers-ssl-ciphers/
  ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS
  ssl-default-bind-options no-sslv3
  tune.ssl.default-dh-param 2048

defaults
  log global
  mode tcp
  option tcplog
  option dontlognull
        timeout connect 20s
        timeout client 60s
        timeout server 50s
        timeout tunnel 3600s
        timeout queue 60s
        timeout tarpit 60s
  errorfile 400 /etc/haproxy/errors/400.http
  errorfile 403 /etc/haproxy/errors/403.http
  errorfile 408 /etc/haproxy/errors/408.http
  errorfile 500 /etc/haproxy/errors/500.http
  errorfile 502 /etc/haproxy/errors/502.http
  errorfile 503 /etc/haproxy/errors/503.http
  errorfile 504 /etc/haproxy/errors/504.http

listen haproxy-status
  mode http
  bind <%= @status_bind_address %>:1936
  stats enable
  stats uri /stats
  stats refresh 15s
  stats show-node

frontend <%= @app_name %>-frontend
  bind *:80
  mode tcp
  maxconn <%= @frontend_maxconn %>
  option tcplog
  default_backend <%= @app_name %>

backend <%= @app_name %>
  mode tcp
  option forceclose
  balance roundrobin
  <% for app_backend in @app_backends  %>
  server <%= app_backend['host'] %> <%= app_backend['host'] %>:<%= @app_port %> maxconn <%= app_backend['maxconn'] %> check port <%= @health_port %> inter 5000 fastinter 1000 fall 1 weight 1
  <% end %>
